common lang
  default-language:   Haskell2010
  ghc-options:
    -Wall -Wnoncanonical-monad-instances
    -Wincomplete-uni-patterns -Wincomplete-record-updates
    -Wredundant-constraints -Widentities -rtsopts
    -- See Plutus Tx readme
    -fobject-code -fno-ignore-interface-pragmas -fno-omit-interface-pragmas
  if flag(defer-plugin-errors)
      ghc-options: -fplugin-opt PlutusTx.Plugin:defer-errors

library
    import: lang
    exposed-modules:
      Contracts.Oracle.Types
      Contracts.Oracle.RequestToken
      Contracts.Oracle.OnChain
      Contracts.Oracle.OffChain
      Contracts.Oracle
      Contracts.MutualBet
      Contracts.MutualBet.Types
      Contracts.MutualBet.OffChain
      Contracts.MutualBet.StateMachine
      Types.Game
    build-depends:
      aeson,
      base >= 4.9 && < 5,
      bytestring,
      base64-bytestring,
      cardano-api -any,
      cardano-crypto -any,
      containers -any,
      data-default -any,
      text -any,
      lens -any,
      openapi3 -any,
      semigroups -any,
      serialise,
      playground-common,
      plutus-contract,
      plutus-tx-plugin,
      plutus-tx,
      plutus-ledger,
      plutus-ledger-api,
      plutus-chain-index,
      plutus-chain-index-core,
      plutus-use-cases,

    hs-source-dirs: src src/Contracts/MutualBet
    default-language: Haskell2010
    ghc-options:
            -- See Plutus Tx readme
            -fobject-code -fno-ignore-interface-pragmas -fno-omit-interface-pragmas

